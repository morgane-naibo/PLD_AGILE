<BorderPane fx:id="pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller" prefHeight="600" prefWidth = "800" stylesheets="@/assets/styles.css" styleClass="border-pane">
    
    <!-- Message en haut -->
    <top>
        <Label fx:id="messageLabel" visible="false" text="" prefHeight="50" styleClass="message-label"/>    
        <!--<Button fx:id="calculerChemin" text="calculer un chemin" onAction="#calculerChemin" prefHeight="50" />-->
    </top>

    <!-- Plan au centre -->
    <center>
       <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <Pane fx:id="mapPane" prefWidth="500" prefHeight="500" styleClass="map-pane"> <!-- Nouveau Pane pour le plan -->
                <!-- Ajouter ici les éléments du plan -->
                <children>
                    <StackPane prefHeight="450" prefWidth="700">
                        <Button fx:id="chargerPlan" text="Charger un plan" styleClass="plan-button" onAction="#handleLoadPlan" />
                    </StackPane>
                    <Button fx:id="boutonPlus" text="+" styleClass="plus-button" onAction="#handleButtonClick" visible="false" layoutY="55" />
                    <Button fx:id="chargerFichierButton" text="Charger un fichier de demandes" styleClass="file-button" onAction="#handleFileButton" visible="false" layoutY="95"/>
                    <Button fx:id="selectionnerPointButton" text="Sélectionner un point sur la carte" styleClass="file-button" onAction="#handleSelectButton" visible="false" layoutY="135"/>
                    <Button fx:id="chargerNouveauPlan" text="Charger un nouveau plan" styleClass="file-button" onAction="#handleLoadPlan" visible="false" layoutY="175"/>
                </children>
            </Pane>
        </ScrollPane>
    </center>
    
    <!-- VBox d'information à droite -->
    <right>
        <VBox fx:id="deliveryInfoVBox" visible="false" prefWidth="250.0" spacing="0" maxWidth="Infinity" styleClass="vbox">
            <Label fx:id="label" text="Liste des Points de Livraison" />
            <Label text="" />
        </VBox>
   </right>
    
</BorderPane>