<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Group?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller" prefHeight="600" prefWidth = "800" stylesheets="@/assets/styles.css">
    
    <!-- Message en haut -->
    <top>
        <Label fx:id="messageLabel" visible="false" text="Cliquez sur une intersection pour ajouter l'entrepôt ou un point de livraison" prefHeight="50" />    
    </top>

    <!-- Plan au centre -->
    <center>
        <AnchorPane fx:id="pane" prefWidth="550" prefHeight="550">
            <children>
                <Pane fx:id="mapPane" prefWidth="550" prefHeight="550"> <!-- Nouveau Pane pour le plan -->
                    <!-- Ajouter ici les éléments du plan -->
                    <children>
                        <StackPane prefHeight="550.0" prefWidth="550.0">
                            <Button fx:id="chargerPlan" text="Charger un plan" styleClass="plan-button" onAction="#handleLoadPlan" />
                        </StackPane>
                    </children>
                </Pane>

                <!-- Boutons d'interface en dehors du mapPane pour qu'ils ne soient pas affectés par le zoom -->
                <Button fx:id="boutonPlus" text="+" styleClass="plus-button" onAction="#handleButtonClick" visible="false" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"/>
                <Button fx:id="chargerFichierButton" text="Charger un fichier de demandes" styleClass="file-button" onAction="#handleFileButton"
                        visible="false" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="130"/>
                <!-- Autres boutons ici si nécessaire -->
                <Button fx:id="selectionnerPointButton" text="Selectionner un point sur la carte" styleClass="file-button" onAction="#handleSelectButton"
                        visible="false" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="90"/>
                <Button fx:id="chargerNouveauPlan" text="Charger un nouveau plan" styleClass="file-button" onAction="#handleLoadPlan"
                        visible="false" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50"/>
            </children>
        </AnchorPane>
    </center>
    
    <!-- VBox d'information à droite -->
    <right>
        <VBox fx:id="deliveryInfoVBox" visible="false" prefWidth ="250.0" spacing="0">
            <!-- Les informations des points de livraison s'afficheront ici -->
            <Label fx:id="label" text="Liste des Points de Livraison" />
        </VBox>    
   </right>
    
</BorderPane>